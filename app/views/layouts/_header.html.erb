<header>
	<nav class="navbar bg-dark navbar-dark navbar-expand-sm">
		<div class="container">
			<div class="col">
				<%= link_to 'HealthUp', root_path, class: "navbar-brand" %>
			</div>
			<div class="col">
				<ul class="navbar-nav justify-content-end">
					<li class="nav-item"><%= link_to 'Home', 		root_path, 								class: "nav-link" %></li>
					<li class="nav-item"><%= link_to 'About', 	about_path, 							class: "nav-link" %></li>
					<li class="nav-item"><%= link_to 'Contact', new_outside_message_path, class: "nav-link" %></li>
					<% if logged_in? %>
						<li class="nav-item dropdown">
							<a href="#" class="dropdown-toggle nav-link" data-toggle="dropdown">My Account</a>
							<div class="dropdown-menu">
									<%= link_to "Profile", current_user, class: "dropdown-item" %>
									<%= link_to "Cohort", current_user.cohort, class: "dropdown-item" if current_user.cohort %> 
									<%= link_to "Messages", messages_user_path(current_user), class: "dropdown-item" %>
									<%= link_to "Edit Information", edit_user_path(current_user), class: "dropdown-item" %>
							</div>
						</li>
						<% if current_user.admin? %>
							<%= render 'layouts/admin_links' %>
						<% end %>
						<li class="nav-item"><%= link_to 'Log Out', logout_path,
																		 method: :delete, class: "nav-link" %></li>
					<% else %>
						<li class="nav-item"><%= link_to 'Log In', login_path, class: "nav-link" %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</nav>
</header>