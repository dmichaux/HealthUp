<% provide :title, "Log In" %>

<h1>Log in</h1>

<%= form_for :session, url: login_path do |f| %>

	<%= f.label 			:email %>
	<%= f.email_field :email %>

	<%= f.label 				 :password %>
	<%= link_to "forgot password", new_password_reset_path %>
	<%= f.password_field :password %>

	<%= f.check_box :remember_me %>	
	<%= f.label 		:remember_me %>

	<%= f.submit "log in" %>
<% end %>
