<% provide :title, "Assign" %>

<h1>Assign Users to <%= @cohort.name %></h1>

<%= link_to "Back to #{@cohort.name}", cohort_path(@cohort) %><br><br>

<% if @unassigned.any? %>
	<%= form_for :assigned, url: add_users_cohort_path, method: :patch do |f| %>

		<% @unassigned.each do |user| %>
			<%= f.check_box :user_ids, { multiple: true }, user.id, false %>
			<%= f.label :user_ids, "#{user.name}" %><br>
		<% end %>

		<%= f.submit "Assign", class: "btn btn-sm" %>
	<% end %>
<% else%>
	All clients are current assigned to other cohorts
<% end %>

