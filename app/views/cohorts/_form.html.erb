<%= form_for @cohort do |f| %>

	<%= render "shared/error_messages", object: f.object %>
	
	<%= f.label :name %>
	<%= f.text_field :name, class: "form-control" %><br>

	<%= f.label :description %>
	<%= f.text_area :description, class: "form-control" %><br>

	<%= f.fields_for :goals do |goal_form| %>

		<%= goal_form.label :body, "Cohort Goal" %>
		<%= goal_form.text_field :body, class: "form-control" %><br>

	<% end %>

	<small>Leave dates blank to designate as "unspecified"</small><br>

	<%= f.label :start_date %>
	<%= f.date_select :start_date, include_blank: true, class: "form-control" %><br>

	<%= f.label :end_date %>
	<%= f.date_select :end_date, include_blank: true, class: "form-control" %><br>

	<%= f.submit yield(:button_text), class: "btn btn-sm" %>
<% end %>
