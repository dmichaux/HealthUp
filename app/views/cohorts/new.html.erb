<% provide :title, "New Cohort" %>

<h1>New Cohort</h1>

<%= form_for @cohort do |f| %>

	<%= render "shared/error_messages", object: f.object %>
	
	<%= f.label :name %><br>
	<%= f.text_field :name %><br>

	<%= f.label :description %><br>
	<%= f.text_area :description %><br><br>

	<%= f.label :start_date %>
	<%= f.date_select :start_date %><br>

	<%= f.label :end_date %>
	<%= f.date_select :end_date %><br><br>

	<%= f.submit "Create Cohort" %>
<% end %>
