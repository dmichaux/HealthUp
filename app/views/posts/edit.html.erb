<% provide :title, "Edit Post" %>

<h1>Edit Post</h1>

<%= form_for @post do |f| %>

	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :title %>
	<%= f.text_field :title, class: "form-control" %>

	<%= f.label :body %>
	<%= f.text_area :body, class: "form-control" %>

	<%= f.submit "Update Post", class: "btn" %>
<% end %>
